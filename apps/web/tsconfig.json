{
  "extends": "@pancakeswap/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "paths": {
      "*": ["./src/*"],
      // import ui source directly for smaller bundle size
      "@pancakeswap/ui": ["../../packages/ui/index.ts"],
      "@pancakeswap/ui/css": ["../../packages/ui/css/index.ts"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    // This is the path to the generated types from removed typechain
    "**/config/abi/types/",
    "**/abis/types/*.ts"
  ],
  "include": ["next-env.d.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
